<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Thirsty Goat</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/index">Thirsty Goat</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/index">Home</a></li>
          <li class="active"><a href="/water_reports">Water Reports</a></li>
          <li><a href="/historical_reports">Historical Reports</a></li>
          <li><a href="/admin">Admin</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/profile"><span class="glyphicon glyphicon-user"></span> Edit Profile</a></li>
          <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
      </div>
    </nav>
    <h2 style="text-align: center">Edit Purity Report</h2>
          <div class="container-fluid">

            <form action="/purity_reports/{{report.purity_report_id}}/edit" method="POST" class="form" role="form" style="display:block; width:50%; margin:0 auto;">
              <div class="form-group">
                <div class="form-group">
                  <label for="source_id">Source Report</label>
                  <select id="source_id" class="form-control" name="source_id">
                    {{#each reports}}
                    <option>{{this.source_report_id}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="form-group">
                  <label for="overall_condition">Overall Condition</label>
                  <select id="overall_condition" class="form-control" name="overall_condition">
                    <option>Safe</option>
                    <option>Treatable</option>
                    <option>Unsafe</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="form-group">
                  <label for="virus_ppm">Virus PPM</label>
                  <input type="number" class="form-control" name="virus_ppm" value="{{report.virus_ppm}}"></input>
                </div>
              </div>
              <div class="form-group">
                <div class="form-group">
                  <label for="contaminant_ppm">Contaminant PPM</label>
                  <input type="number" class="form-control" name="contaminant_ppm" value="{{report.contaminant_ppm}}"></input>
                </div>
              </div>
              <button type="submit" class="btn btn-primary" style="display:block; width:50%; margin:0 auto;">Update</button>
            </form>
          </div>
        </div>

    <script>
      var element = document.getElementById("source_id");
      element.value="{{report.source_id}}";
      element = document.getElementById("overall_condition");
      element.value="{{report.overall_condition}}"
    </script>

    <!-- jQuery -->
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    
  </body>
</html>