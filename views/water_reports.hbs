<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Thirsty Goat</title>

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	</head>
	<body>
		<!--navbar Begins-->
		<nav class="navbar navbar-inverse">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="index">Thirsty Goat</a>
		    </div>
		    <ul class="nav navbar-nav">
		      <li><a href="index">Home</a></li>
		      <li class="active"><a href="water_reports">Water Reports</a></li>
		      <li><a href="historical_reports">Historical Reports</a></li>
		      <li><a href="admin">Admin</a></li>
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
		      <li><a href="profile"><span class="glyphicon glyphicon-user"></span> Edit Profile</a></li>
		      <li><a href="logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
		    </ul>
		  </div>
		</nav>
		<!--navbar Ends-->

		<!--Water Reports Table Begins-->
		<div class="container-fluid">
			<div class="row">
				
				<div class="col-md-10">
					<h2 style="text-align: center">Water Source Reports</h2>
					<table class="table table-responsive table-striped table-hover ">
						<thead>
							<tr>
								<th>Source Report ID</th>
								<th>Location</th>
								<th>Water Type</th>
								<th>Water Condition</th>
								<th>Reported By</th>
								<th>Date Reported</th>
							</tr>
						</thead>
						<tbody>
						{{#each reports}}
						
							<tr>
								<td>{{this.source_report_id}}</td>
								<td>{{this.location}}</td>
								<td>{{this.water_type}}</td>
								<td>{{this.water_condition}}</td>
								<td>{{this.user_modified}}</td>
								<td>{{this.date_modified}}</td>
								{{!-- {{#if reports}}
    								<td>Purity Report(s)</td>
  								{{else}}
							    	
							  	{{/if}} --}}
								
							</tr>
						{{/each}}
						</tbody>
						
					</table>
				</div>
				<div class="col-md-2">
					<h2 style="text-align: center">New Source Report</h2>
					<div>
						<form action="newSourceReport" method="POST" class="form" role="form">
						
							<div class="form-group">
								<label for="location">Location</label>
								<input type="text" class="form-control" name="location" placeholder="Input field">
							</div>
							<div class="form-group">
								<div class="form-group">
								  <label for="watertype">Water Type</label>
								  <select class="form-control" name="watertype">
								    <option>Bottled</option>
								    <option>Well</option>
								    <option>Stream</option>
								    <option>Lake</option>
								    <option>Spring</option>
								    <option>Other</option>
								  </select>
								</div>
							</div>
							<div class="form-group">
								<div class="form-group">
								  <label for="watercondition">Water Type</label>
								  <select class="form-control" name="watercondition">
								    <option>Potable</option>
								    <option>Treatable-Clear</option>
								    <option>Treatable-Muddy</option>
								    <option>Waste</option>
								  </select>
								</div>
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-10">
					<h2 style="text-align: center">Water Purity Reports</h2>
					<table class="table table-responsive table-striped table-hover ">
						<thead>
							<tr>
								<th>Purity Report ID</th>
								<th>Source Report ID</th>
								<th>Location</th>
								<th>Overall Condition</th>
								<th>Virus PPM</th>
								<th>Contaminant PPM</th>
								<th>Reported By</th>
								<th>Date Reported</th>
							</tr>
						</thead>
						<tbody>
						{{#each purityreports}}
						
							<tr>
								<td>{{this.purity_report_id}}</td>
								<td>{{this.source_report_id}}</td>
								<td>{{this.location}}</td>
								<td>{{this.overall_condition}}</td>
								<td>{{this.virus_ppm}}</td>
								<td>{{this.contaminant_ppm}}</td>
								<td>{{this.user_modified}}</td>
								<td>{{this.date_modified}}</td>
								{{!-- {{#if reports}}
    								<td>Purity Report(s)</td>
  								{{else}}
							    	
							  	{{/if}} --}}
								
							</tr>
						
						{{/each}}
						</tbody>
					</table>
				</div>
				<div class="col-md-2">
					<h2 style="text-align: center">New Purity Report</h2>
					<div>
						<form action="newPurityReport" method="POST" class="form" role="form">
							<div class="form-group">
								<div class="form-group">
								  <label for="sourcereport">Source Report</label>
								  <select class="form-control" name="sourcereport">
								    {{#each reports}}
								    <option>{{this.source_report_id}}</option>
								    {{/each}}
								  </select>
								</div>
							</div>
							<div class="form-group">
								<div class="overallcondition-group">
								  <label for="watertype">Overall Condition</label>
								  <select class="form-control" name="overallcondition">
								    <option>Safe</option>
								    <option>Treatable</option>
								    <option>Unsafe</option>
								  </select>
								</div>
							</div>
							<div class="form-group">
								<div class="form-group">
								  <label for="virusppm">Virus PPM</label>
								  <input type="number" class="form-control" name="virusppm"></input>
								</div>
							</div>
							<div class="form-group">
								<div class="form-group">
								  <label for="contaminantppm">Contaminant PPM</label>
								  <input type="number" class="form-control" name="contaminantppm"></input>
								</div>
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>



		

		<!-- jQuery -->
		<script src="//code.jquery.com/jquery.js"></script>
		<!-- Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
		
	</body>
</html>